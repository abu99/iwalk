<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:useLevel="true"
            android:thicknessRatio="14.0"
            android:thickness="15.0dp">

            <gradient
                android:type="sweep"
                android:startColor="#ff9d9e9d"
                android:centerColor="#ff9d9e9d"
                android:endColor="#ff9d9e9d" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromDegrees="270"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:useLevel="true"
                android:thicknessRatio="14.0"
                android:thickness="15.0dp">

                <gradient
                    android:type="radial"
                    android:gradientRadius="@dimen/activity_horizontal_margin"
                    android:startColor="#F35821"
                    android:centerColor="#F35821"
                    android:endColor="#F35821" />
            </shape>
        </rotate>
    </item>
</layer-list>