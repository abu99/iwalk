<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

    <TextView
        android:id="@+id/dateTimeLabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:paddingRight="3dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:text="Wed, Jul 4 00:00"/>


    <TextView
        android:id="@+id/distanceLabel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateTimeLabel"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/dateTimeLabel"
        android:paddingEnd="3dp"
        android:text="100"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/painFreeDistanceLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateTimeLabel"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/distanceLabel"
        android:paddingRight="3dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:text="100"/>

</RelativeLayout>